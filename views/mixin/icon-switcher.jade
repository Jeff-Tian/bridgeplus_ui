mixin link(activePage, className, href, title)
    if activePage === className
        a(href="#{href}", title="#{title}", class="active #{className}")
    else
        a(href="#{href}", title="#{title}", class="#{className}")

mixin icon-switcher(active)
    h2(style="margin-bottom:0;")
        ul.horizontal.about-us.icon.links(style="margin: 0;")
            li
                + link(active, 'about-us', '/portal/zh/about-us', '关于我们')
            li
                + link(active, 'team', '/portal/zh/team', '团队成员')
            li
                + link(active, 'video', '/portal/zh/video','视频介绍')
            li
                + link(active, 'contact-us', '/portal/zh/contact-us', '联系我们')
            li
                + link(active, 'join-us', '/portal/zh/join-us', '加入我们')

mixin footer-header(title, activeLink)
    div.horizontal.very.relaxed.container
        div.right.aligned.pull-right
            + icon-switcher(activeLink)
        h2.big-title #{title}