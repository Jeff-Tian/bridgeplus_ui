mixin video(video)
    if video
        div.ui.embed(data-modal-selector=".mask.#{video.className}")
            br
            video(width="160", height="120", controls="")
                source(src="#{video.mp4}", type="video/mp4")
                object#flowplayer(data="http://blob.bridgeplus.cn/flowplayer-3.2.2.swf", type="application/x-shockwave-flash", width="320", height="240")
                    param(name="movie", value="blob.bridgeplus.cn/flowplayer-3.2.2.swf")
                    param(name="allowfullscreen", value="true")
                    param(name="flashvars", value="config={'clip':{'url':'#{video.mp4}','autoPlay':false}}")
        p
            strong #{video.title}

mixin videos(a)
    div.row
        div.col-md-4
            + video(a[0])
        div.col-md-4
            + video(a[1])
        div.col-md-4
            + video(a[2])
    div.row
        div.col-md-4
            + video(a[3])
        div.col-md-4
            + video(a[4])
        div.col-md-4
            + video(a[5])